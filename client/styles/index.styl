              float right
          .text-moderation
            display none
            .button
              padding 2px
              font-size 0.8em
          .attachments
            display flex
            flex-direction row
            flex-wrap wrap
            align-items flex-start
            justify-content space-around
            align-content space-between
            .attachment
              display inline-block
              flex auto
              margin-bottom 1vh
              margin-top 1vh
              width 24%
              align-self flex-start
              font-size 0.8em
              iframe, img
                max-width  ($topicPanelWidth / 5.1)
                max-height 20vh
                height auto
                background-color rgba(0,0,0,0.1)
              a.link
                font-size 0.8em

        &:hover
            .text-feedback
              opacity 1
        &.me
          .text
            color lighten($blueDark, 20)
        &.spam
          .text
            opacity 0.1
        &.lp
          margin-top 0
