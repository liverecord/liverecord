              max-height 80vh
              // box-shadow 0 0 1vw -0.5vw $blueDark
              display block
              margin 0.1vh auto
              &.alpha
                box-shadow none
          .text-feedback
            display flex
            opacity 0
            position absolute
            right 0
            top -1vh
            font-size 0.8em
            line-height 0.8em
            a
              display inline-block
              padding 2px 3px
              line-height inherit
              cursor pointer
            span
              line-height inherit
